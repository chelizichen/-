    <script defer>
        // 初始化图表实例
        var myChart = echarts.init(document.getElementById("chart"));
        // 指定图表的配置项和数据
        var option = {
            title: {
                text: '<%= title %>',
            },
            tooltip: {},
            legend: {
                data: ['<%- legend %>'],
            },
            xAxis: {
                data: JSON.parse('<%- xData %>'),
                axisLabel: {
                    color: '#333',
                    //  让x轴文字方向为竖向
                    interval: 0,
                    formatter: function (value) {
                        return value.split('').join('\n')
                    }
                },
                type: 'category',
                axisLine: {
                    show: false // 隐藏 X 轴轴线
                },
                axisTick: {
